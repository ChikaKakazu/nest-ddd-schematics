{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "typeRoots": ["node_modules/@types"],
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "removeComments": true,
        "sourceMap": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/**/files/**"]

}
